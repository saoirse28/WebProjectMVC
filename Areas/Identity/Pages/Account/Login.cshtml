@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "~/Areas/Identity/Pages/_AuthLayout.cshtml";
}

<form class="p-5" id="account" method="post">

    <div asp-validation-summary="ModelOnly" class="text-danger small"></div>

    <div class="row mt-1">
        <div class="col">
            <div class="form-group">
                <label asp-for="Input.UserName" class="form-label"></label>
                <div class="input-group mb-3">
                    <span class="input-group-text" id="basic-addon1"><i class="fa-solid fa-user"></i></span>
                    <input asp-for="Input.UserName" class="form-control" autocomplete="username" aria-required="true" />
                </div>
                <span asp-validation-for="Input.UserName" class="text-danger small"></span>
            </div>
        </div>
    </div>

    <div class="row mt-1">
        <div class="col">
            <div class="form-group">
                <label asp-for="Input.Password" class="form-label"></label>
                <div class="input-group mb-3">
                    <span class="input-group-text" id="basic-addon1"><i class="fa-solid fa-key"></i></span>
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                </div>
                </span><span asp-validation-for="Input.Password" class="text-danger small"></span>
            </div>
        </div>
    </div>

    <div class="row mt-1">
        <div class="col">
            <div class="form-group">
                <div class="checkbox">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-2">
        <div class="col">
            <div class="form-group">
                <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
            </div>
        </div>
    </div>


    <div class="row mt-1">
        <div class="col">
            <div class="form-group">
                <p>
                    <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                </p>
            </div>
        </div>
    </div>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(function () {
            var current = location.pathname;
            $('.nav-tabs li a').each(function () {
                var $this = $(this);
                if (current.indexOf($this.attr('href')) !== -1) {
                    $this.addClass('active');
                }
            })
        })
    </script>
}
